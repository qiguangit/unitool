<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            stylesheets="/css/generate.css"
            fx:controller="com.qiguangit.unitool.plugin.generate.controller.VariableDialogController"
            prefHeight="400.0" prefWidth="600.0">
    <TableView fx:id="tvVariables" >
        <columns>
            <TableColumn fx:id="idxColumn" prefWidth="70.0" minWidth="40.0" maxWidth="70.0" text="" />
            <TableColumn fx:id="keyColumn" prefWidth="75.0" text="变量名" />
            <TableColumn fx:id="valueColumn" prefWidth="75.0" text="变量值" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>
    <HBox spacing="10" styleClass="operations">
        <Button fx:id="btnAdd" onAction="#onMouseClick"/>
        <Button fx:id="btnRemove" onAction="#onMouseClick"/>
    </HBox>
</VBox>
